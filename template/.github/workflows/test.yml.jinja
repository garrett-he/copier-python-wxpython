name: Test

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]

jobs:
  test:

    runs-on: ubuntu-latest
    strategy:
      fail-fast: false
      matrix:
        python-version:{% for i in python_version | version_list(['3.10', '3.11', '3.12', '3.13', '3.14']) %}
          - "{{ i }}"{% endfor %}
    steps:
      - uses: actions/checkout@v3

      - uses: actions/setup-python@v3
        with:
          python-version: {% raw %}${{ matrix.python-version }}{% endraw %}

      - run: |
          python -m pip install --upgrade pip
          python -m pip install pdm

      - run: pdm install

      - run: pdm run test
